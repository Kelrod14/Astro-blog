---
import BaseLayouts from "./BaseLayouts.astro";

const { frontmatter } = Astro.props;
---
<BaseLayouts pageTitle={frontmatter.title}>
    <p>Escrito por {frontmatter.author}</p>
    <p>Publicado en: {frontmatter.pubDate.toString().slice(0,10)}</p>
    <p><em>Descripcion: {frontmatter.description}</em></p>
    <img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} />
    <slot />  
</BaseLayouts>
